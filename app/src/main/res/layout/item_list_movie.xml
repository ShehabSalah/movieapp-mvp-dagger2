<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="3dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true"
    android:transitionName="container">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/movie_poster"
            android:layout_width="match_parent"
            android:layout_height="@dimen/poster_item_height"
            android:scaleType="centerCrop"
            android:transitionName="movie_poster"
            tools:src="@drawable/placeholder_background"
            android:contentDescription="@string/poster_content_description" />

        <TextView
            android:id="@+id/movie_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:padding="@dimen/regular_padding"
            android:singleLine="true"
            android:textSize="@dimen/small_text_size"
            android:transitionName="movie_title"
            tools:text="This is a very very long movie title for testing the UI abilities!" />
    </LinearLayout>


</android.support.v7.widget.CardView>